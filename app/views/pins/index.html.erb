    <% @pins.reverse_each do |pin| %>
    <div class="box">
      <%= link_to image_tag(pin.image.url), pin_path(pin) %>
      <div class="pin-edit">
        <% if pin.user == current_user %>
          <%= link_to 'ï ‚', edit_pin_path(pin) %>
          <%= link_to 'âœ–', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
      <div class="box-body">
        <h1><%= pin.title %></h1>
        <h2><%= pin.description %></h2>
      </div>
      <hr>
      <div class="box-body">
        <p>by <span><%= pin.user.name if pin.user %></span><p>
      </div>
    </div>
  <% end %>
</div>
