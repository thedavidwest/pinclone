<div class="all-pins transitions-enabled">
    <% @pins.reverse_each do |pin| %>
    <div class="box">
      <%= link_to image_tag(pin.image.url), pin_path(pin) %>
      <div class="box-body">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
        <% if pin.user == current_user %>
          <%= link_to '', edit_pin_path(pin) %>
          <%= link_to '✖', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
