<div id="all-pins" class="transitions-enabled">
  <div class="box box-user">
    <div class="avatar"><%= image_tag(current_user.avatar.url(:thumb)) %></div>
    <h1><%= @user.name %></h1>
    <h3>My Pins</h3>
  </div>
  <div class="box new-pin">
    <h5><%= link_to "✚", new_pin_path %></h5>
  </div>
  <% if @pins %>
    <% @pins.reverse_each do |pin| %>
      <div class="box">
        <div class="edit-image"><%= link_to image_tag(pin.image.url), pin_path(pin) %>
          <div class="pin-edit">
            <% if pin.user == current_user %>
              <%= link_to '', edit_pin_path(pin) %>
              <%= link_to '✖', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
          <div class="box-body">
            <h1><%= pin.title %></h1>
            <h2><%= pin.description %></h2>
          </div>
          <div class="box-body">
            <%= link_to like_pin_path(pin), method: :put do |u| %>
              <div class="vote">❤ <%= pin.get_upvotes.size %></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
